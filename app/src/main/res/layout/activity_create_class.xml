<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.CreateNewSection.CreateClass">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title=""
        app:titleTextColor="#647DCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Class"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#647DCA"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/close"
            android:src="@drawable/close"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:backgroundTint="#647DCA"
            android:layout_gravity="right"
            android:layout_marginEnd="25sp"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/className"
        android:layout_width="280sp"
        android:layout_height="55sp"
        android:layout_marginTop="76sp"
        android:background="@drawable/edittext_bg"
        android:hint="Course Name"
        android:inputType="textCapWords"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dept"
        android:layout_width="280sp"
        android:layout_height="55sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/className" />

    <TextView
        android:id="@+id/sDate"
        android:layout_width="280sp"
        android:layout_height="55sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dept" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:text="Duration"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dept"
        app:layout_constraintStart_toStartOf="@+id/dept"
        app:layout_constraintTop_toTopOf="@+id/dept" />

    <TextView
        android:id="@+id/classTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:text="Class Time"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cTime"
        app:layout_constraintStart_toStartOf="@+id/cTime"
        app:layout_constraintTop_toTopOf="@+id/cTime" />

    <TextView
        android:id="@+id/cTime"
        android:layout_width="280sp"
        android:layout_height="55sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sDate" />

    <ImageView
        android:id="@+id/timePicker"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginEnd="24sp"
        android:src="@drawable/timeicon"
        app:layout_constraintBottom_toBottomOf="@+id/cTime"
        app:layout_constraintEnd_toEndOf="@+id/cTime"
        app:layout_constraintTop_toTopOf="@+id/cTime"/>


    <Spinner
        android:id="@+id/dropdown_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="8sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/dept"
        app:layout_constraintTop_toTopOf="@+id/dept" />

    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:text="Start Date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sDate"
        app:layout_constraintStart_toStartOf="@+id/sDate"
        app:layout_constraintTop_toTopOf="@+id/sDate" />

    <ImageView
        android:id="@+id/datePicker"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginEnd="24sp"
        android:src="@drawable/dobpicker"
        app:layout_constraintBottom_toBottomOf="@+id/sDate"
        app:layout_constraintEnd_toEndOf="@+id/sDate"
        app:layout_constraintTop_toTopOf="@+id/sDate"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="......... Select class days ........."
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/monday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cTime"
        app:layout_constraintVertical_bias="0.576" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create"
        android:layout_width="200sp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="210sp"
        android:background="@drawable/rounded_shape"
        android:text="Create"
        android:textColor="#30384E"
        app:elevation="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104sp"
        android:layout_marginTop="8sp"
        android:text="Wednesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monday" />

    <CheckBox
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="115sp"
        android:text="Tuesday"
        app:layout_constraintStart_toEndOf="@+id/monday"
        app:layout_constraintTop_toBottomOf="@+id/cTime" />

    <CheckBox
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="8sp"
        android:text="Thursday"
        app:layout_constraintStart_toEndOf="@+id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/tuesday" />

    <CheckBox
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104sp"
        android:layout_marginTop="8sp"
        android:text="Friday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wednesday" />

    <CheckBox
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104sp"
        android:layout_marginTop="85sp"
        android:text="Monday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StdSignUp.StudentSignup_2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/booksdoodle"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/textView7"
        android:elevation="2sp"
        android:layout_width="match_parent"
        android:layout_height="550sp"
        android:background="@drawable/curvedesign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="350sp"
        android:layout_height="500sp"
        app:cardCornerRadius="50sp"
        android:elevation="10sp"
        android:layout_marginTop="100sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userDP"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_marginTop="30sp"
        android:elevation="4sp"
        android:src="@drawable/default_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editDP"
        android:elevation="4sp"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="80sp"
        android:layout_marginStart="30sp"
        android:src="@drawable/editicon"
        app:layout_constraintEnd_toEndOf="@+id/userDP"
        app:layout_constraintTop_toTopOf="@+id/userDP" />

    <EditText
        android:id="@+id/name"
        android:layout_width="290sp"
        android:layout_height="55sp"
        android:elevation="4sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/edittext_bg"
        android:hint="Full Name"
        android:inputType="textCapWords"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDP" />


    <TextView
        android:id="@+id/whichYear"
        android:layout_width="290sp"
        android:layout_height="55sp"
        android:elevation="4sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/edittext_bg"
        android:textSize="17sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:elevation="4sp"
        android:text="Year"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/whichYear"
        app:layout_constraintStart_toStartOf="@+id/whichYear"
        app:layout_constraintTop_toTopOf="@+id/whichYear" />

    <Spinner
        android:id="@+id/dropdown_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="8sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/whichYear"
        app:layout_constraintTop_toTopOf="@+id/whichYear" />
    <EditText
        android:id="@+id/rollnumber"
        android:layout_width="290sp"
        android:layout_height="55sp"
        android:layout_marginTop="16sp"
        android:elevation="4sp"
        android:background="@drawable/edittext_bg"
        android:hint="Roll Number"
        android:inputType="textCapWords"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whichYear" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="180sp"
        android:layout_height="55sp"
        android:layout_gravity="center"
        android:layout_marginTop="45sp"
        android:background="@drawable/rounded_shape"
        android:text="Sign up"
        android:textColor="#30384E"
        app:elevation="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollnumber" />
</androidx.constraintlayout.widget.ConstraintLayout>
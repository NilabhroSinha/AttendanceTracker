<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.TeachSignUp.TeacherSignUp_2">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/booksdoodle"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/textView7"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/curvedesign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:cardCornerRadius="50dp"
        android:elevation="10dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userDP"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:src="@drawable/default_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editDP"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/editicon"
        app:layout_constraintEnd_toEndOf="@+id/userDP"
        app:layout_constraintTop_toTopOf="@+id/userDP" />


    <EditText
        android:id="@+id/Lname"
        android:layout_width="290sp"
        android:layout_height="55sp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="@drawable/edittext_bg"
        android:hint="Last Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fname" />

    <EditText
        android:id="@+id/Fname"
        android:layout_width="290sp"
        android:layout_height="55sp"
        android:layout_marginTop="60dp"
        android:elevation="4dp"
        android:background="@drawable/edittext_bg"
        android:hint="First Name"
        android:inputType="textCapWords"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDP" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_shape"
        android:text="Sign up"
        android:textColor="#30384E"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lname" />

</androidx.constraintlayout.widget.ConstraintLayout>